/* pages/librarymanagement/librarymanagement.wxss */
.container{
	margin: 15rpx;
	height: 300rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	align-items: center
}

.offer_wrap{
  
  margin: 10rpx 250rpx 20rpx 200rpx;
  font-size: 24rpx;
}
.Image1 { 
  position: absolute;
top: 0px; left: -32px;
  width: 18px; 
  height: 16px
 } 

.nameImage2 { 
  position: absolute;
top: 1px; left: -32px; 
  width: 18px; 
  height: 16px
 } 
 .nameImage3 { 
  position: absolute;
top: 2px; left: -32px; 
  width: 18px; 
  height: 16px
 } 



.bg-image{ 
  width : 100%;
  height : 100%;  
  position: fixed;  
  z-index: -1;  
}


.offer_item{
  position: relative;
  width: 350rpx;
  height: 50rpx;
  margin: 10rpx 0 50rpx;

  color: #333;
  font-size: 26rpx;
  line-height: 50rpx;
  box-sizing: border-box;
}
.bt_connect{
  width: 200rpx;
  height: 70rpx;
  color: #6699FF;
  border: 3rpx solid #6699FF;
  border-radius: 80rpx;
  font-size: 35rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 按钮的点击效果 */
.hover-class-1 {
  top: 3rpx;
  background-color: #e7f5ff;
}