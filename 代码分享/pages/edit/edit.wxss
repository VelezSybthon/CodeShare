/* pages/edit/edit.wxss */
.bg-image{ 
  width : 100%;
  height : 100%;  
  position: fixed;  
  z-index: -1;  
}

.btn {
  
  display: inline-block;
  margin: 10px;
  padding: 1em 2em;
  background: transparent;
  border: 4px;
  border-radius: 3px;
  font-weight: 400;
  text-align: center;
  box-shadow: 0px 2px 4px #67c0f0,0px 1px 2px #bf2fcb;
}
 
 
.btn text {
  background: -webkit-linear-gradient(left, #67c0f0, #bf2fcb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.bt_connect{
  width: 200rpx;
  height: 70rpx;
  color: #6699FF;
  border: 3rpx solid #6699FF;
  border-radius: 80rpx;
  font-size: 35rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 按钮的点击效果 */
.hover-class-1 {
  top: 3rpx;
  background-color: #e7f5ff;
}